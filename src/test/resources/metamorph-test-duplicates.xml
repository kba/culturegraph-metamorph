<?xml version="1.1" encoding="UTF-8"?>
<metamorph xmlns="http://www.culturegraph.org/metamorph"
	entityMarker=".">
	<collect-literal name="@name" value="${p1} (${p2})" forceOnEnd="name" sameEntity="true" reset="true">
		<data name="p1" source="name.default">
			<regexp match="^(.+?)(?: / (.+?))?$" format="${1}" />
		</data>
		<data name="p2" source="name.default">
			<regexp match="^(.+?) / (.+?)$" format="${2}" />
		</data>
	</collect-literal>

	<collect-entity name="name" forceOnEnd="name" sameEntity="true" reset="true">
		<data name="full" source="@name" />
		<data name="part1" source="name.default">
			<regexp match="^(.+?)(?: / (.+?))?$" format="${1}" />
		</data>
		<data name="part2" source="name.default">
			<regexp match="^(.+?) / (.+?)$" format="${2}" />
		</data>
	</collect-entity>
</metamorph>
